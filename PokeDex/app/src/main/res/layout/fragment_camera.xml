<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <!-- Here you put the rest of your current view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="0dp"
        android:orientation="vertical"
        tools:context=".ui.main.Camera">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pokedex" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@android:anim/accelerate_interpolator"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorcyan"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:background="@android:color/black"
                android:padding="20dp"
                android:src="@color/colorcyan" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorgreen"
                android:fontFamily="@font/open_sans_bold"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="name of pokemon"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/type1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="10dp"
                    android:text="type1"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="10dp"
                    android:text="type2"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/capture"
                android:layout_width="355dp"
                android:layout_height="162dp"
                android:backgroundTint="@color/colorcyan"
                android:src="@drawable/button" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView3"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignEnd="@id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pokedex1" />

    </LinearLayout>
</ScrollView>


